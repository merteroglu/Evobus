<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="10dp">

        <ImageView
            android:id="@+id/imgPp"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@color/cardview_dark_background"
            android:layout_margin="5dp" />

        <ImageView
            android:id="@+id/imgDurum"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/circle_green"
            android:layout_alignBottom="@id/imgPp"
            android:layout_alignRight="@id/imgPp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp">

            <TextView
                android:id="@+id/studentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Öğrenci İsmi"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/parentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Veli İsmi"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"/>

            <TextView
                android:id="@+id/studentPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/studentName"
                android:layout_alignParentLeft="true"
                android:text="05551234455"
                android:layout_marginTop="3dp"/>

            <TextView
                android:id="@+id/parentPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/parentName"
                android:layout_alignParentRight="true"
                android:text="05452213366"
                android:layout_marginTop="3dp"
                android:layout_marginRight="8dp"/>

            <Button
                android:id="@+id/btnStudent"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/telephone"
                android:layout_below="@id/studentPhone"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="6dp"/>

            <Button
                android:id="@+id/btnParent"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/telephone"
                android:layout_below="@id/parentPhone"
                android:layout_alignParentRight="true"
                android:layout_marginTop="6dp"
                android:layout_marginRight="8dp"/>


        </RelativeLayout>



    </LinearLayout>


</android.support.v7.widget.CardView>